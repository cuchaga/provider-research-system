# Environment Variables Template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_TYPE=sqlite  # or postgres
DATABASE_URL=postgresql://provider_admin:provider123@localhost:5432/providers

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Web Scraping
WEB_SCRAPING_ENABLED=true
WEB_SCRAPING_TIMEOUT=30

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/provider_research.log

# NPI Registry
NPI_REGISTRY_API_URL=https://npiregistry.cms.hhs.gov/api/
NPI_REGISTRY_TIMEOUT=30
